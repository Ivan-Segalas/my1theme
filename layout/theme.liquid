<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }}</title>

    <!-- Shopify Content for Header -->
    {{ content_for_header }}

    <!-- Load Theme CSS -->
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  </head>

  <body>
    <!-- Shopify Content for Notifications -->
    {{ content_for_notifications }}

    <!-- Header Section -->
    {% section 'header' %}

    <!-- Main Content (Home Page or Template Pages) -->
    <main role="main">
      {% if template == 'index' %}
        {% section 'index' %}
      {% else %}
        {{ content_for_layout }}
      {% endif %}
    </main>

    <!-- Footer Section -->
    {% section 'footer' %}

    <!-- Shopify Content for Footer -->
    {{ content_for_footer }}
  </body>
</html>

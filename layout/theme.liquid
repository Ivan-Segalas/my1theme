<!doctype html>
<html lang="en">
  <head>
    <!-- Metadata -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }}</title>

    <!-- Shopify's Required Content for Header -->
    {{ content_for_header }}

    <!-- Load Theme Styles -->
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  </head>

  <body>
    <!-- Shopify Content for Notifications -->
    {{ content_for_notifications }}

    <!-- Header Section -->
    {% section 'header' %}

    <!-- Main Content (Dynamic Sections for Each Page) -->
    <main role="main">
      <!-- Home Page Section -->
      {% if template == 'index' %}
        {% section 'index' %}
      {% endif %}

      <!-- Test Section for Debugging -->
      {% section 'test' %}

      <!-- Content for Other Pages (e.g., product, collection, blog) -->
      {{ content_for_layout }}
    </main>

    <!-- Footer Section -->
    {% section 'footer' %}

    <!-- Shopify's Required Content for Footer -->
    {{ content_for_footer }}
  </body>
</html>
